function solution(s) {
  let answer = "";
  let isTrue = true;
  for (let i = 0; i < s.length; i++) {
    if (s[i] === " ") {
      isTrue = false;
      answer += s[i];
    } else if (isTrue) {
      answer += s[i].toUpperCase();
    } else {
      answer += s[i].toLowerCase();
    }
    isTrue = !isTrue;
  }
  return answer;
}
